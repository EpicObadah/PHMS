<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:layout_marginVertical="8dp"
    android:backgroundTint="@color/white"
    android:background="@drawable/rounded_corner">

    <TextView
        android:id="@+id/note_title_text_view"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/note_title_text_view"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginVertical="4dp"/>

    <TextView
        android:id="@+id/note_content_text_view"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/this_will_be_note_content_text_view"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="17sp"
        android:layout_marginVertical="4dp"/>

    <TextView
        android:id="@+id/note_timestap_text_view"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/this_will_be_time_stamp_text_view"
        android:textSize="12sp"
        android:gravity="end"
        android:layout_marginVertical="4dp"/>


</LinearLayout>